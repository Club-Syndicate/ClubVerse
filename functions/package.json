{
  "name": "clubverse-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for ClubVerse - Event notifications and backend services",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "lint": "eslint . --config .eslintrc.json --no-eslintrc",
    "lint:fix": "eslint . --config .eslintrc.json --no-eslintrc --fix"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0"
  },
  "private": true,
  "keywords": [
    "firebase",
    "cloud-functions",
    "notifications",
    "events",
    "clubverse"
  ],
  "author": "ClubVerse Team",
  "license": "MIT"
}
